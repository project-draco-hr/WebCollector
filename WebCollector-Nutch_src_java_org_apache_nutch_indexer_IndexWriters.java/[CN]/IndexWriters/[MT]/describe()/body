{
  StringBuffer buffer=new StringBuffer();
  if (this.indexWriters.length == 0)   buffer.append("No IndexWriters activated - check your configuration\n");
 else   buffer.append("Active IndexWriters :\n");
  for (int i=0; i < this.indexWriters.length; i++) {
    buffer.append(this.indexWriters[i].describe()).append("\n");
  }
  return buffer.toString();
}
