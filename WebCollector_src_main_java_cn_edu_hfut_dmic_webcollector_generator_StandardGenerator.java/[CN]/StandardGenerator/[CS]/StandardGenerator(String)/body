{
  this.crawlPath=crawlPath;
  try {
    backup();
  }
 catch (  IOException ex) {
    ex.printStackTrace();
  }
  DbUpdater dbupdater=new DbUpdater(crawlPath);
  try {
    if (dbupdater.isLocked()) {
      String segment_path=getSegmentPath();
      if (segment_path != null) {
        dbupdater.merge(segment_path);
      }
      dbupdater.unlock();
    }
  }
 catch (  IOException ex) {
    ex.printStackTrace();
  }
  try {
    initReader();
  }
 catch (  IOException ex) {
    ex.printStackTrace();
  }
}
