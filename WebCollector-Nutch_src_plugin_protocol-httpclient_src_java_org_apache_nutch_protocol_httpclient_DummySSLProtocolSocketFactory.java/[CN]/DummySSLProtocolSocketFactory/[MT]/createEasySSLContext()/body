{
  try {
    SSLContext context=SSLContext.getInstance("SSL");
    context.init(null,new TrustManager[]{new DummyX509TrustManager(null)},null);
    return context;
  }
 catch (  Exception e) {
    if (LOG.isErrorEnabled()) {
      LOG.error(e.getMessage(),e);
    }
    throw new HttpClientError(e.toString());
  }
}
