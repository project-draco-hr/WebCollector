{
  StringBuilder sb=new StringBuilder();
  sb.append("doc {\n");
  for (  Map.Entry<String,NutchField> entry : fields.entrySet()) {
    sb.append("\t");
    sb.append(entry.getKey());
    sb.append(":\t");
    sb.append(entry.getValue());
    sb.append("\n");
  }
  sb.append("}\n");
  return sb.toString();
}
