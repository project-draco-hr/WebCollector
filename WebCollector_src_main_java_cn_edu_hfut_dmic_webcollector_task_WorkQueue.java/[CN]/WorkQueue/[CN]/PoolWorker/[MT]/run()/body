{
  Runnable r;
  while (true) {
synchronized (queue) {
      while (queue.isEmpty()) {
        try {
          queue.wait();
        }
 catch (        InterruptedException ignored) {
        }
      }
      r=(Runnable)queue.removeFirst();
      status=1;
    }
    try {
      r.run();
    }
 catch (    RuntimeException e) {
    }
 finally {
      status=0;
    }
  }
}
