{
  this.conf=conf;
  Reader reader=null;
  try {
    reader=getRulesReader(conf);
  }
 catch (  Exception e) {
    if (LOG.isErrorEnabled()) {
      LOG.error(e.getMessage());
    }
    throw new RuntimeException(e.getMessage(),e);
  }
  try {
    rules=readRules(reader);
  }
 catch (  IOException e) {
    if (LOG.isErrorEnabled()) {
      LOG.error(e.getMessage());
    }
    throw new RuntimeException(e.getMessage(),e);
  }
}
