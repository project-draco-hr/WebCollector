{
  assertThat(CharsetDetector.guessEncodingByMozilla(encode("KOI8-R","????????????")),is("KOI8-R"));
  assertThat(CharsetDetector.guessEncodingByMozilla(encode("Windows-1251","????????????")),is("WINDOWS-1251"));
  assertThat(CharsetDetector.guessEncodingByMozilla(encode("ISO-8859-7","????????' ???????????? ????????????, ??? ????????.")),is("ISO-8859-7"));
  assertThat(CharsetDetector.guessEncodingByMozilla(encode("Windows-1252","hello")),is(DEFAULT_ENCODING));
}
